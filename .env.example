# ============================================
# ANFT - Authentic NFT Platform (Solana)
# Environment Variables Configuration
# ============================================

# --------------------------------------------
# SOLANA NETWORK CONFIGURATION
# --------------------------------------------
# Solana RPC URL (devnet or mainnet-beta)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
# Cluster name for explorer links: 'devnet' or 'mainnet-beta'
NEXT_PUBLIC_SOLANA_CLUSTER=devnet

# --------------------------------------------
# ANFT PROGRAM (Anchor)
# --------------------------------------------
# Deployed anft_did program ID on Solana
NEXT_PUBLIC_ANFT_PROGRAM_ID=ANFTDidProgramID111111111111111111111111111

# ANFT Marketplace Program
NEXT_PUBLIC_MARKETPLACE_PROGRAM_ID=MarketplaceProgramID111111111111111111111111111

# ANFT platform authority keypair 
# Used to sign SAS attestations 
ANFT_AUTHORITY_KEYPAIR=your_base58_authority_keypair_here

# ANFT authority public key 
NEXT_PUBLIC_ANFT_AUTHORITY_PUBKEY=your_authority_pubkey_here

# --------------------------------------------
# SOLANA ATTESTATION SERVICE (SAS)
# --------------------------------------------
# Schema ID registered on SAS for ANFT_MINT_V1
NEXT_PUBLIC_ANFT_SAS_SCHEMA_ID=your_sas_schema_id_here

# --------------------------------------------
# HUGGING FACE AI API
# --------------------------------------------
# Required for AI image generation
# Get your API key from: https://huggingface.co/settings/tokens
# Create a fine-grained token with "Make calls to Inference Providers" permission
NEXT_PUBLIC_HUGGING_FACE_API_KEY=hf_your_api_key_here

# --------------------------------------------
# IPFS STORAGE (FILEBASE)
# --------------------------------------------
# Filebase provides S3-compatible IPFS pinning
# Get credentials from: https://console.filebase.com/keys
# Server-side credentials (secure, not exposed to client)
FILEBASE_ACCESS_KEY=your_filebase_access_key_here
FILEBASE_SECRET_KEY=your_filebase_secret_key_here
FILEBASE_BUCKET=your_custom_bucket_name